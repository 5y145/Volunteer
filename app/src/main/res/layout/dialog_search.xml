<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:scrollbars="none"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/ibClose"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="end"
            android:background="@drawable/sharp_close_24"/>

        <TextView
            android:layout_marginStart="@dimen/medium_margin"
            style="@style/medium_dark_text"
            android:text="검색" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginHorizontal="@dimen/medium_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etSearch"
                    android:paddingHorizontal="8dp"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:drawablePadding="8dp"
                    android:drawableStart="@drawable/sharp_search_24"
                    android:background="@color/gray2"
                    android:textSize="@dimen/medium_text"
                    android:textColor="@color/gray1" />

                <ImageButton
                    android:id="@+id/ibCancel"
                    android:layout_marginHorizontal="@dimen/small_margin"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:background="@drawable/sharp_close_24"
                    android:gravity="center"
                    android:visibility="gone" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginTop="@dimen/large_margin"
            android:layout_marginStart="@dimen/medium_margin"
            style="@style/medium_dark_text"
            android:text="지역" />

        <LinearLayout
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginStart="@dimen/medium_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/snSido"
                android:paddingBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:spinnerMode="dialog"/>

            <Spinner
                android:id="@+id/snGugun"
                android:layout_marginStart="@dimen/small_margin"
                android:paddingBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:spinnerMode="dialog"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/large_text"
            android:layout_marginHorizontal="@dimen/medium_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/medium_dark_text"
                android:text="봉사 시작일" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvStartDay"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    style="@style/medium_dark_text"
                    android:text="000000"
                    android:textColor="@color/black" />

                <ImageButton
                    android:id="@+id/ibStartDay"
                    android:layout_gravity="end"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/ic_day"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/large_margin"
            android:layout_marginHorizontal="@dimen/medium_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                style="@style/medium_dark_text"
                android:text="봉사 종료일" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvEndDay"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    style="@style/medium_dark_text"
                    android:text="000000"
                    android:textColor="@color/black" />

                <ImageButton
                    android:id="@+id/ibEndDay"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/ic_day"/>
            </LinearLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_margin="@dimen/medium_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="false">

            <Button
                android:id="@+id/btnSearch"
                style="@style/solid_button"
                android:text="검색" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>