<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.DetailActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray0">

    <LinearLayout
        android:id="@+id/llAppBar"
        android:paddingBottom="4dp"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvLabel"
            android:layout_marginHorizontal="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="세부정보"
            android:textSize="20dp"
            android:fontFamily="@font/nanum_bold"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        </LinearLayout>

        <ImageButton
            android:id="@+id/ibBookMark"
            android:layout_marginEnd="16dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/sharp_bookmark_border_24"/>
    </LinearLayout>

    <View
        android:id="@+id/v"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/gray3"
        app:layout_constraintTop_toBottomOf="@+id/llAppBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/llContainer"/>

    <LinearLayout
        android:id="@+id/llContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/v"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvProgramId"
                            android:layout_marginStart="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:fontFamily="@font/nanum_bold" />

                        <TextView
                            android:id="@+id/tvField"
                            android:layout_marginStart="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:fontFamily="@font/nanum_bold" />
                    </LinearLayout>

                    <TextView
                        android:gravity="center"
                        android:layout_margin="8dp"
                        android:id="@+id/tvTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="\n\n\n"
                        android:textSize="20dp"
                        android:fontFamily="@font/nanum_bold"
                        android:textColor="@color/black" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_margin="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="봉사 지역"
                            android:fontFamily="@font/nanum_bold"
                            android:textColor="@color/black"
                            android:textSize="14dp"/>

                        <TextView
                            android:layout_margin="16dp"
                            android:id="@+id/tvArea"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:fontFamily="@font/nanum_bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_margin="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="봉사 장소"
                            android:textSize="14dp"
                            android:fontFamily="@font/nanum_bold"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tvPlace"
                            android:layout_margin="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:fontFamily="@font/nanum_bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_margin="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="모집 상태"
                            android:textSize="14dp"
                            android:fontFamily="@font/nanum_bold"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tvState"
                            android:layout_margin="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:fontFamily="@font/nanum_bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_margin="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="모집 인원"
                            android:textSize="14dp"
                            android:fontFamily="@font/nanum_bold"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tvNeedPersonNumber"
                            android:layout_margin="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:fontFamily="@font/nanum_bold" />

                        <TextView
                            android:id="@+id/tvIsFamilyPossible"
                            android:padding="4dp"
                            android:layout_marginVertical="16dp"
                            android:layout_marginStart="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="가족 가능"
                            android:textSize="10dp"
                            android:fontFamily="@font/nanum_bold"
                            android:textColor="@color/white"
                            android:background="@color/orange"/>

                        <TextView
                            android:id="@+id/tvIsGroupPossible"
                            android:padding="4dp"
                            android:layout_marginVertical="16dp"
                            android:layout_marginStart="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="단체 가능"
                            android:textSize="10dp"
                            android:fontFamily="@font/nanum_bold"
                            android:textColor="@color/white"
                            android:background="@color/orange"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white">

                    <TextView
                        android:layout_margin="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="봉사 내용"
                        android:textSize="20dp"
                        android:fontFamily="@font/nanum_bold"
                        android:textColor="@color/black" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray3" />

                    <TextView
                        android:layout_margin="16dp"
                        android:id="@+id/tvContents"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="모집 내용"
                        android:fontFamily="@font/nanum_bold"
                        android:textSize="14dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_marginVertical="8dp"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="@drawable/ic_hourglass" />

                        <TextView
                            android:layout_marginVertical="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="모집 기간"
                            android:textSize="14dp"
                            android:fontFamily="@font/nanum_bold" />

                        <TextView
                            android:id="@+id/tvNoticeDay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="모집 기간"
                            android:textSize="14dp"
                            android:fontFamily="@font/nanum_bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginVertical="8dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/ic_calendar" />

                        <TextView
                            android:layout_marginVertical="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="봉사 기간"
                            android:textSize="14dp"
                            android:fontFamily="@font/nanum_bold" />

                        <TextView
                            android:id="@+id/tvDay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="봉사 기간"
                            android:textSize="14dp"
                            android:fontFamily="@font/nanum_bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginVertical="8dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="@drawable/ic_clock" />

                        <TextView
                            android:layout_marginVertical="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="봉사 시간"
                            android:textSize="14dp"
                            android:fontFamily="@font/nanum_bold" />

                        <TextView
                            android:id="@+id/tvTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="봉사 시간"
                            android:fontFamily="@font/nanum_bold"
                            android:textSize="14dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginVertical="8dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="16dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/ic_certificate" />

                        <TextView
                            android:id="@+id/tvIsAdultPossible"
                            android:layout_marginVertical="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="성인"
                            android:textSize="14dp"
                            android:fontFamily="@font/nanum_bold" />

                        <TextView
                            android:id="@+id/tvIsYoungPossible"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="청소년"
                            android:textSize="14dp"
                            android:fontFamily="@font/nanum_bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:paddingBottom="32dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white">

                    <TextView
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="신청 정보"
                        android:textSize="20dp"
                        android:fontFamily="@font/nanum_bold"
                        android:textColor="@color/black" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_margin="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="관리자"
                            android:textSize="14dp"
                            android:fontFamily="@font/nanum_bold"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tvManager"
                            android:layout_margin="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="관리자"
                            android:textSize="14dp"
                            android:fontFamily="@font/nanum_bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_margin="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="연락처"
                            android:textSize="14dp"
                            android:fontFamily="@font/nanum_bold"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tvPhoneNumber"
                            android:layout_margin="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="연락처"
                            android:textSize="14dp"
                            android:fontFamily="@font/nanum_bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_margin="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="이메일"
                            android:textSize="14dp"
                            android:fontFamily="@font/nanum_bold"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tvEmail"
                            android:layout_margin="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="이메일"
                            android:textSize="14dp"
                            android:fontFamily="@font/nanum_bold" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnUrl"
                        android:layout_margin="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="신청하기"
                        android:fontFamily="@font/nanum_bold"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/pb"
        android:layout_marginBottom="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>