<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:background="@color/gray1">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:paddingBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:background="@color/white">

            <TextView
                android:layout_marginHorizontal="16dp"
                android:id="@+id/tvTop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="세부정보"
                android:textColor="@color/black"
                android:fontFamily="@font/nanum_bold"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            </LinearLayout>

            <ImageButton
                android:id="@+id/ibBookMark"
                android:layout_marginHorizontal="16dp"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/sharp_bookmark_24"
                android:backgroundTint="@color/gray7"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:scrollbars="none"
            android:fadingEdge="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_marginStart="16dp"
                            android:id="@+id/tvProgramId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="봉사 번호"
                            android:fontFamily="@font/nanum_bold"
                            android:textSize="12dp"/>

                        <TextView
                            android:layout_marginStart="8dp"
                            android:id="@+id/tvField"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="봉사 분야"
                            android:fontFamily="@font/nanum_bold"
                            android:textSize="12dp"/>
                    </LinearLayout>

                    <TextView
                        android:gravity="center"
                        android:layout_margin="8dp"
                        android:id="@+id/tvProgramName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="봉사 제목\n\n"
                        android:fontFamily="@font/nanum_bold"
                        android:textColor="@color/black"
                        android:textSize="20dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_margin="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="봉사 장소"
                            android:fontFamily="@font/nanum_bold"
                            android:textColor="@color/black"
                            android:textSize="14dp"/>

                        <TextView
                            android:layout_margin="16dp"
                            android:id="@+id/tvPlace"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="봉사 장소"
                            android:fontFamily="@font/nanum_bold"
                            android:textSize="14dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_margin="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="봉사 지역"
                            android:fontFamily="@font/nanum_bold"
                            android:textColor="@color/black"
                            android:textSize="14dp"/>

                        <TextView
                            android:layout_margin="16dp"
                            android:id="@+id/tvHost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="봉사 지역"
                            android:fontFamily="@font/nanum_bold"
                            android:textSize="14dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_margin="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="모집 인원"
                            android:fontFamily="@font/nanum_bold"
                            android:textColor="@color/black"
                            android:textSize="14dp"/>

                        <TextView
                            android:layout_margin="16dp"
                            android:id="@+id/tvTotalNeed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="모집 인원"
                            android:fontFamily="@font/nanum_bold"
                            android:textSize="14dp"/>

                        <TextView
                            android:id="@+id/tvFamily"
                            android:padding="4dp"
                            android:layout_marginVertical="16dp"
                            android:layout_marginStart="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="가족 가능"
                            android:fontFamily="@font/nanum_bold"
                            android:textColor="@color/white"
                            android:textSize="10dp"
                            android:background="@color/orange"/>

                        <TextView
                            android:id="@+id/tvGroup"
                            android:padding="4dp"
                            android:layout_marginVertical="16dp"
                            android:layout_marginStart="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="단체 가능"
                            android:fontFamily="@font/nanum_bold"
                            android:textColor="@color/white"
                            android:textSize="10dp"
                            android:background="@color/orange"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_margin="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="모집 상태"
                            android:fontFamily="@font/nanum_bold"
                            android:textColor="@color/black"
                            android:textSize="14dp"/>

                        <TextView
                            android:layout_margin="16dp"
                            android:id="@+id/tvState"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="모집 상태"
                            android:fontFamily="@font/nanum_bold"
                            android:textSize="14dp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white">

                    <TextView
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="봉사 내용"
                        android:fontFamily="@font/nanum_bold"
                        android:textColor="@color/black"
                        android:textSize="20dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray3" />

                    <TextView
                        android:layout_margin="16dp"
                        android:id="@+id/tvProgramContents"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="모집 내용"
                        android:fontFamily="@font/nanum_bold"
                        android:textSize="14dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_marginVertical="8dp"
                        android:layout_marginStart="16dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/ic_hourglass" />

                        <TextView
                            android:layout_marginVertical="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="모집 기간"
                            android:fontFamily="@font/nanum_bold"
                            android:textSize="14dp"/>

                        <TextView
                            android:id="@+id/tvNotice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="모집 기간"
                            android:fontFamily="@font/nanum_bold"
                            android:textSize="14dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginVertical="8dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/ic_calendar" />

                        <TextView
                            android:layout_marginVertical="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="봉사 기간"
                            android:fontFamily="@font/nanum_bold"
                            android:textSize="14dp"/>

                        <TextView
                            android:id="@+id/tvDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="봉사 기간"
                            android:fontFamily="@font/nanum_bold"
                            android:textSize="14dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginVertical="8dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/ic_clock" />

                        <TextView
                            android:layout_marginVertical="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="봉사 시간"
                            android:fontFamily="@font/nanum_bold"
                            android:textSize="14dp"/>

                        <TextView
                            android:id="@+id/tvTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="봉사 시간"
                            android:fontFamily="@font/nanum_bold"
                            android:textSize="14dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginVertical="8dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/ic_certificate" />

                        <TextView
                            android:id="@+id/tvIsPossible1"
                            android:layout_marginVertical="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="성인"
                            android:fontFamily="@font/nanum_bold"
                            android:textSize="14dp"/>

                        <TextView
                            android:id="@+id/tvIsPossible2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="청소년"
                            android:fontFamily="@font/nanum_bold"
                            android:textSize="14dp"/>
                    </LinearLayout>
                </LinearLayout>



                <LinearLayout
                    android:layout_marginVertical="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white">

                    <TextView
                        android:layout_gravity="center"
                        android:layout_margin="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="신청 정보"
                        android:fontFamily="@font/nanum_bold"
                        android:textColor="@color/black"
                        android:textSize="20dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_margin="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="담당자 명"
                            android:fontFamily="@font/nanum_bold"
                            android:textColor="@color/black"
                            android:textSize="16dp"/>

                        <TextView
                            android:layout_margin="16dp"
                            android:id="@+id/tvNanmmbyNmAdmn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="담당자 명"
                            android:fontFamily="@font/nanum_bold"
                            android:textSize="14dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_margin="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="전화 번호"
                            android:fontFamily="@font/nanum_bold"
                            android:textColor="@color/black"
                            android:textSize="16dp"/>

                        <TextView
                            android:layout_margin="16dp"
                            android:id="@+id/tvTelno"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="전화 번호"
                            android:fontFamily="@font/nanum_bold"
                            android:textSize="14dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_margin="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="이메일    "
                            android:fontFamily="@font/nanum_bold"
                            android:textColor="@color/black"
                            android:textSize="16dp"/>

                        <TextView
                            android:layout_margin="16dp"
                            android:id="@+id/tvEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="이메일"
                            android:fontFamily="@font/nanum_bold"
                            android:textSize="14dp"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnGo"
                        android:layout_margin="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="신청하기"
                        android:fontFamily="@font/nanum_bold"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/pb"
        android:layout_margin="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>