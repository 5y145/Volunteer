<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="seongjun.volunteer.model.MainData" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        app:cardElevation="1dp"
        app:cardCornerRadius="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivLocate"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/sharp_room_24"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvHost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_regular"
                android:hint="host"
                android:textSize="12dp"
                app:layout_constraintStart_toEndOf="@+id/ivLocate"
                app:layout_constraintTop_toTopOf="@+id/ivLocate"
                app:layout_constraintBottom_toBottomOf="@+id/ivLocate"/>

            <TextView
                android:id="@+id/tvState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/orange"
                android:textColor="@color/white"
                android:layout_marginStart="16dp"
                android:textSize="12dp"
                android:text="모집 중"
                app:layout_constraintStart_toEndOf="@+id/tvHost"
                app:layout_constraintTop_toTopOf="@+id/ivLocate"
                app:layout_constraintBottom_toBottomOf="@+id/ivLocate"/>

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                android:layout_marginStart="16dp"
                android:textSize="12dp"
                android:hint="12/1 ~ 12/2"
                app:layout_constraintStart_toEndOf="@+id/tvState"
                app:layout_constraintTop_toTopOf="@+id/ivLocate"
                app:layout_constraintBottom_toBottomOf="@+id/ivLocate"/>

            <ImageButton
                android:id="@+id/ibBookMark"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/sharp_bookmark_24"
                android:layout_marginEnd="32dp"
                app:layout_constraintTop_toTopOf="@+id/ivLocate"
                app:layout_constraintBottom_toBottomOf="@+id/ivLocate"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvTitle"
                android:paddingVertical="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanum_regular"
                android:textColor="@color/black"
                android:layout_margin="8dp"
                android:textSize="16dp"
                android:hint="ㅇㅇ시 봉사활동 모집"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivLocate"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>